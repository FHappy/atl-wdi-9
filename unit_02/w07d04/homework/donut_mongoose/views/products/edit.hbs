<main>

	<h2>EDIT THIS DONUT!</h2>

	<a href="/">Return to Home Page</a>

	<div id="edit-form" class="donut-container-show">
		<form action="/{{donut.id}}/edit?_method=PATCH" method="post">
			<label for="name">Current Name: {{donut.name}}</label>
			<input type="text" name="name" value="New Donut Name">
			<br>
			<label for="description">Current Description: {{donut.description}}</label>
			<br>
			<input type="text" name="description" value="New Donut Description">
			<br>
			<label for="price">Current Price: {{donut.price}}</label>
			<input type="number" name="price" value="0">
			<br>
			<label for="qty">Current Quantity: {{donut.qty}}</label>
			<input type="number" name="qty" value="0">
			<br>
			<input type="submit" value="Update Donut">
		</form>
	</div>
	<div id="img-preview">
		<img src="{{donut.img}}">
	</div>
</main>
</body>
</html>

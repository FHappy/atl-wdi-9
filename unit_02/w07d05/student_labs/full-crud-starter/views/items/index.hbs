<a href="/users/{{user.id}}/items/new">Add a new Item</a>

<ul>
  {{#each items}}
    <li>{{this.name}}</li>
    <div>
      <form action="/users/{{../user.id}}/items/{{this.id}}?_method=DELETE" method="POST">
        <input type="submit" value="Delete Item"/>
      </form>
      <a href="/users/{{../user.id}}/items/{{this.id}}/edit">Edit Item</a>
    </div>
    <br/>
  {{/each}}
</ul>
